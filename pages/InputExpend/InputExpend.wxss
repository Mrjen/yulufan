/* pages/InputExpend/InputExpend.wxss */
.container{
  width: 750rpx;
  background: #f9f9f9;
  display: block;
  position: absolute;
  height: 100%;
}

.list_item{
  display: flex;
  width: 750rpx;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  padding: 20rpx;
  position: relative;
  background: #fff;
}

.list_item::before{
  content: " ";
  display: block;
  width: 100%;
  border-bottom: 1px solid #f0f0f0;
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  margin:0 auto;
  -webkit-transform: scaleY(.5);
  pointer-events: none;
  -webkit-transform-origin: 0 0;
}

.item_left view:nth-of-type(1){
  font-size: 34rpx;
  color: #444549;
  margin-bottom: 14rpx;
}

.item_left view:nth-of-type(2){
  font-size: 28rpx;
  color: #b1b2b6;
  line-height: 1;
}

.money{
  color: #e95666;
}

.more_data{
  text-align: center;
  padding:20rpx;
}
