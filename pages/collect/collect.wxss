/* pages/collect/collect.wxss */
.container{
  width: 100%;
  height: 100%;
  position: absolute;
  justify-content: flex-start;
  background-image: -webkit-linear-gradient(0deg, #b2fffc 0, #96cfff 100%);
  background-image: linear-gradient(90deg, #b2fffc 0, #96cfff 100%);
}

.yulu_item{
  width: 680rpx;
  background: #fff;
  border-radius: 10rpx;
  margin: 20rpx 0;
  box-sizing: border-box;
  padding: 20rpx;
}

.yulu_img{
  width: 640rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  overflow: hidden;
  margin:0 auto 20rpx auto;
  border-radius: 10rpx;
}

.yulu_img image{
  width: 640rpx;
  display: block;
  border-radius: 10rpx;
}

.info_box{
  display: flex;
  justify-content: space-between;
}

.persion_info{
  display: flex;
  width: 100%;
}

.persion_info image{
  display: block;
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.yu_text{
  font-size: 34rpx;
  line-height: 40rpx;
  display: inline-block;
  margin-bottom: 50rpx;
}

.like_btn{
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
  background: url(https://yulufan.playonwechat.com/static/icon/home_zan.png);
  background-size: 100% 100%;
}

.persion_name{
  font-size: 33rpx;
}

.like_box{
  font-size: 28rpx;
  display: flex;
  align-items: center;
}

.yulu_time{
  margin-left:60rpx;
}

.opation_box{
  display: flex;
  align-items: flex-end;
}

.opation_box view{
  width: 40rpx;
  height: 40rpx;
  margin:0 16rpx;
}

.opation_box .pay_btn{
   background: url(https://yulufan.playonwechat.com/static/icon/home_money.png);
   background-size: 100% 100%;
}

.opation_box .collect_btn{
   background: url(https://yulufan.playonwechat.com/static/icon/home_collection.png);
   background-size: 100% 100%;
}

.opation_box view.has_collect {
  background: url(https://yulufan.playonwechat.com/static/icon/home_has_collection.png);
  background-size: 100% 100%;
}

.opation_box .down_btn{
    width: 40rpx;
    height: 40rpx;
    margin:0 16rpx;
   background: url(https://yulufan.playonwechat.com/static/icon/home_download.png);
   background-size: 100% 100%;
}

.info_out{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.bottom_bar{
  display: flex;
  width: 100%;
  justify-content: space-between;
}

/*页面菜单*/
.page_menu{
  width: 120rpx;
  height: 200rpx;
  position: fixed;
  right: 0rpx;
  top: 100rpx;
}

.page_menu view{
  width: 120rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  background: #96cfff;
  color: #fff;
  border-radius: 30rpx 0 0 30rpx;
  margin:10rpx 0;
  font-size: 32rpx;
  -webkit-box-shadow: 0 0 5px 1px rgba(0,0,0,0.5) ;
  box-shadow: 0 0 5px 1px rgba(0,0,0,0.5) ;
}

/*打赏弹窗*/
.pay_money_win, .other_win {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  position: fixed;
  left: 0;
  top: 0;
  display: flex;
  justify-content: center;
  align-items: center;
}

.pay_money {
  width: 600rpx;
  height: 520rpx;
  background: #fff;
  border-radius: 10rpx;
}

.close.icon {
  color: #666;
  position: relative;
  margin-top: 0;
  margin-left: 0;
  width: 22px;
  height: 22px;
  flex-shrink: 0;
}

.close.icon:before {
  content: '';
  position: absolute;
  top: 10px;
  width: 22px;
  height: 1px;
  background-color: currentColor;
  -webkit-transform: rotate(-45deg);
  transform: rotate(-45deg);
}

.close.icon:after {
  content: '';
  position: absolute;
  top: 10px;
  width: 22px;
  height: 1px;
  background-color: currentColor;
  -webkit-transform: rotate(45deg);
  transform: rotate(45deg);
}

.close_box {
  display: flex;
  justify-content: flex-end;
  box-sizing: border-box;
  padding: 20rpx 20rpx 0 0;
}

.money_log {
  width: 100rpx;
  height: 100rpx;
  margin: 10rpx auto;
  margin-top: -32rpx;
  background: url(https://yulufan.playonwechat.com/static/icon/home_money_win.png);
  background-size: 100% 100%;
}

.money_num {
  width: 500rpx;
  margin: 0 auto;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  margin-top: 40rpx;
}

.money_num view {
  width: 130rpx;
  height: 60rpx;
  font-size: 36rpx;
  text-align: center;
  line-height: 60rpx;
  border: 1px solid #f96060;
  position: relative;
  margin: 10rpx auto;
  color: #f96060;
  border-radius: 10rpx;
}

.other_money {
  width: 140rpx;
  margin: 0 auto;
  line-height: 40rpx;
  height: 40rpx;
  text-align: center;
  color: #31c4eb;
  font-size: 28rpx;
  margin-top: 30rpx;
}

.money_tip {
  font-size: 24rpx;
  color: #999;
  text-align: center;
  margin-top: 50rpx;
}

.other_win_in {
  width: 600rpx;
  height: 388rpx;
  background: #fbfbfd;
  border-radius: 10rpx;
  box-sizing: border-box;
  padding: 20rpx;
}

.other_win_nav {
  display: flex;
  box-sizing: border-box;
  padding-bottom: 30rpx;
  position: relative;
}

.other_win_nav::before {
  content: "";
  position: absolute;
  left: 0;
  bottom: 0;
  right: 0;
  border-bottom: 1px solid #eae9e8;
  transform: scaleY(0.5);
  transform-origin: 0 0;
  pointer-events: none;
}

.other_title {
  text-indent: -20rpx;
  flex: 1;
  text-align: center;
}

.money_input_box {
  width: 538rpx;
  height: 88rpx;
  line-height: 88rpx;
  background: #fff;
  border: 1px solid #eae9e8;
  margin-top: 40rpx;
  display: flex;
  align-items: center;
}

.money_input_box text {
  display: inline-block;
  line-height: 88rpx;
  flex-shrink: 0;
  text-indent: 20rpx;
}

.money_input_box input {
  display: inline-block;
  height: 88rpx;
  flex: 1;
  line-height: 88rpx;
  margin-left: 20rpx;
  font-size: 40rpx;
}

.pay_other_money {
  width: 538rpx;
  height: 88rpx;
  text-align: center;
  line-height: 88rpx;
  color: #fff;
  background: #04be02;
  border-radius: 6rpx;
  margin-top: 40rpx;
}

/*更多数据*/
.more_data{
  text-align: center;
  padding:20rpx;
}
